<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="date"
            tools:background="#AAA" />

        <TextView
            android:id="@+id/textViewCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewDate"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textViewDate"
            android:text="col1"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewCol1"
            android:layout_below="@+id/textViewCol1"
            android:text="col2"
            android:textColor="@android:color/black" />

</RelativeLayout>