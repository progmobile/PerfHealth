<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.quentindoucet.perfhealth.view.NewPlaceActivity">

    <EditText
        android:id="@+id/tPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nom"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="72dp" />

    <EditText
        android:id="@+id/tAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/action"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="147dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        tools:context="guru.alexisberger.position.MapsActivity" />

    <Button
        android:id="@+id/createPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enregistrer" />

</LinearLayout>


